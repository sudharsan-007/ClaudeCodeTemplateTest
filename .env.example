# Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED - Claude Code
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Project Information
PROJECT_NAME=your_project_name
PROJECT_TYPE=production  # development, staging, production
NODE_ENV=development

# Optional AI Services
OPENAI_API_KEY=your_openai_key_here
ELEVEN_API_KEY=your_elevenlabs_key_here
GEMINI_API_KEY=your_google_gemini_key_here

# MCP Services (Optional)
PERPLEXITY_API_KEY=your_perplexity_key_here
GITHUB_TOKEN=your_github_token_here

# Database Configuration (if applicable)
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
# DATABASE_URL=mysql://username:password@localhost:3306/dbname
# DATABASE_URL=mongodb://username:password@localhost:27017/dbname
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
SESSION_SECRET=your_session_secret_here

# External Services
STRIPE_API_KEY=your_stripe_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
SENDGRID_API_KEY=your_sendgrid_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_2FA=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=debug  # error, warn, info, debug
LOG_FORMAT=json  # json, pretty
LOG_FILE_PATH=./logs/app.log

# Caching
CACHE_TTL=3600  # seconds
CACHE_PREFIX=myapp

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Queue Configuration (if using job queues)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Development Tools
DEBUG=true
VERBOSE_ERRORS=true
HOT_RELOAD=true

# Observability (for Claude hooks)
OBSERVABILITY_SERVER_URL=http://localhost:4000
ENABLE_OBSERVABILITY=false

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/test_dbname
CI=false

# Custom Application Settings
# Add your application-specific settings below
# CUSTOM_SETTING=value